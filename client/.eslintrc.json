{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true
      }
    ],
    "curly": ["error", "all"], // Bắt buộc sử dụng ngoặc nhọn cho tất cả các khối code
    "arrow-parens": ["error", "always"] // Bắt buộc sử dụng ngoặc tròn trong arrow functions
  }
}
